{
  "compilerOptions": {
    "module": "commonjs", // You can also try "esnext" if you're using a bundler like Webpack or ts-node
    "target": "es6", // or "es2015" and above
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
